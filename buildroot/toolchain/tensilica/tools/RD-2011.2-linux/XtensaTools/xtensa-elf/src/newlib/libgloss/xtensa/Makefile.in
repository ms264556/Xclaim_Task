# Use a colon instead of a space to separate the VPATH entries because
# otherwise, the autoconf 2.12-generated configure script will remove
# the VPATH setting for in-place builds.
VPATH = @srcdir@:@srcdir@/..

srcdir = @srcdir@
objdir = .
srcroot = $(srcdir)/../..
objroot = $(objdir)/../..

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
libdir = @libdir@
target_alias = @target_alias@
tooldir = $(exec_prefix)/$(target_alias)

INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@

SHELL = /bin/sh

CC = @CC@

AS = @AS@
AR = @AR@
LD = @LD@
RANLIB = @RANLIB@

AR_FLAGS = qv

LIBS = libgloss.a

OBJS = close.o fstat.o getpid.o kill.o lseek.o open.o print.o putnum.o \
	read.o sbrk.o stat.o unlink.o write.o times.o

# Host specific makefile fragment comes in here.
@host_makefile_frag@

.PHONY: all install info doc install-info clean-info \
	clean mostlyclean distclean maintainer-clean realclean

all: $(LIBS)

%.o : %.c
	$(CC) $(CFLAGS) -DREENTRANT_SYSCALLS_PROVIDED -c -o $@ $<

libgloss.a: $(OBJS)
	@rm -f $@
	$(AR) $(AR_FLAGS) $@ $^
	$(RANLIB) $@

install: $(LIBS)
	if [ ! -d $(tooldir)/lib ]; then \
	  mkdir -p $(tooldir)/lib; \
	fi
	if [ ! -d $(tooldir)/lib/xcc ]; then \
	  mkdir -p $(tooldir)/lib/xcc; \
	fi
	$(INSTALL_DATA) libgloss.a $(tooldir)/lib
	if [ ! -d $(tooldir)/include/sys ]; then \
	  mkdir -p $(tooldir)/include/sys; \
	fi

clean mostlyclean:
	rm -f *~ *.[oa]

distclean maintainer-clean realclean: clean
	rm -f Makefile config.status

info doc:
install-info:
clean-info:

Makefile: Makefile.in config.status @host_makefile_frag_path@
	$(SHELL) config.status

config.status: configure
	$(SHELL) config.status --recheck

